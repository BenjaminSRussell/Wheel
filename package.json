{
  "name": "2d-tech-wheel",
  "version": "1.0.0",
  "description": "2D spinning wheel rendered with Three.js and physics-based controller",
  "main": "src/main.js",
  "type": "module",
  "scripts": {
    "start": "node start-server.js",
    "lint": "eslint \"src/**/*.js\"",
    "lint:fix": "eslint \"src/**/*.js\" --fix",
    "lint:ci": "eslint \"src/**/*.js\" --max-warnings=0 --report-unused-disable-directives",
    "format": "prettier --write \"**/*.{js,json,html,css,md,yml,yaml}\" --config config/.prettierrc.json",
    "format:check": "prettier --check \"**/*.{js,json,html,css,md,yml,yaml}\" --config config/.prettierrc.json",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:ci": "jest --coverage --ci",
    "audit:ci": "npm audit --omit dev --audit-level=moderate",
    "prepare": "husky install",
    "pre-commit": "lint-staged",
    "check:quality": "npm run lint:ci && npm run format:check && npm run test:ci && npm run audit:ci"
  },
  "keywords": [
    "three.js",
    "webgl",
    "2d",
    "wheel",
    "physics"
  ],
  "author": "Benjamin Russell",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "three": "0.170.0",
    "postprocessing": "6.36.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import-x": "^4.16.1",
    "eslint-plugin-perfectionist": "^4.15.1",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-sonarjs": "^3.0.5",
    "eslint-plugin-unicorn": "^58.0.0",
    "globals": "^16.4.0",
    "husky": "^9.1.6",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.2.10",
    "live-server": "1.2.2",
    "prettier": "^3.6.2"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/config/"
    ],
    "collectCoverageFrom": [
      "src/**/*.js"
    ]
  }
}
